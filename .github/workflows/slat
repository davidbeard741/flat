name: Slat

on:
  push:
    paths:
      - .github/workflows/slat.yml
  workflow_dispatch:
  schedule:
    - cron: '0 21 * * 1-5' # Run M-F at 2100UTC (1700ET)

jobs:
  scheduled:
    runs-on: ubuntu-latest
    steps:
      - name: Check out repo
        uses: actions/checkout@v2
      - name: Setup deno
        uses: denoland/setup-deno@v1
        with:
          deno-version: v1.x
      - name: Fetch sol 
        uses: githubocto/flat@v3
        with:
          http_url: https://api.coingecko.com/api/v3/coins/solana/ohlc?vs_currency=usd&days=30
          downloaded_filename: sol-hist.json 
          postprocess: postprocesssol.js
